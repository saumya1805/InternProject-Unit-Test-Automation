        @Autowired
        protected GackUtil gackUtil;

      public String makeContractWithDraftStatus() throws Exception{
            String accountId = accountTestingUtil.makeEntity("Test Direct Account");
            String contactId = contactTestingUtil.makeEntity(accountId);
            reestablishRequestToAdminUser();
            String pricebook2Id = pb2TestingUtil.makeEntity(TestNameGenerator.generateUniqueName(PB_NAME), true);
            String contractId = contractTestingUtil.makeEntity(userTestingUtil.getUserId(), CONTRACT_NAME, accountId,
            contactId, pricebook2Id);
            return contractId;
      }
